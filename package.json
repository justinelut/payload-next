    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.0.7",
    "dotenv": "^16.0.0",
    "escape-html": "^1.0.3",
    "express": "^4.18.0",
    "feather-icons": "^4.28.0",
    "framer-motion": "^4.1.5",
    "next": "^12.1.0",
    "payload": "^1.0.7",
    "react": "^18.1.0",
    "react-anchor-link-smooth-scroll": "^1.0.12",
    "react-github-btn": "^1.2.0",
    "react-hook-inview": "^4.5.0",
